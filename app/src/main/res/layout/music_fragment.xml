<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/music_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginStart="145dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="平凡之路"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/music_rg_group"
        android:layout_below="@id/music_tv_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="91dp" >

        <RadioButton
            android:id="@+id/music_rb_1"
            android:text="热歌榜"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:checked="true"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/music_rb_2"
            android:text="新歌榜"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/music_rb_3"
            android:text="飙升榜"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/music_rb_4"
            android:text="抖音榜"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/music_rb_5"
            android:text="电音榜"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <ImageView
        android:id="@+id/music_iv_image"
        android:background="@drawable/ic_music_bg"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <SeekBar
        android:layout_above="@id/music_btn_on_off"
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/music_btn_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@id/music_btn_on_off"
        android:layout_alignBottom="@id/music_btn_on_off"
        android:background="@drawable/left" />

    <Button
        android:id="@+id/music_btn_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@id/music_btn_on_off"
        android:layout_alignBottom="@id/music_btn_on_off"
        android:background="@drawable/right" />

    <Button
        android:id="@+id/music_btn_on_off"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/play" />

</RelativeLayout>